package ZooKeeper2;

public class Bat extends Mammal {
	public void fly() {
		System.out.println("----------- Fly -----------");
		System.out.println("the sound of a bat taking off and decrease its energy by 50");
		this.setEnergyLevel(this.getEnergyLevel()-50);
		System.out.println("the bat energy level is "+this.getEnergyLevel());
	}
	
	public void eatHumans() {
		System.out.println("----------- Eat Humans -----------");
		System.out.println("so-well, never mind, increase its energy by 25");
		this.setEnergyLevel(this.getEnergyLevel()+25);
		System.out.println("the bat energy level is "+this.getEnergyLevel());
	}
	
	public void attackTown() {
		System.out.println("----------- Attack -----------");
		System.out.println("the sound of a town on fire and decrease its energy by 100");
		this.setEnergyLevel(this.getEnergyLevel()+25);
		System.out.println("the bat energy level is "+this.getEnergyLevel());
	}
}
